
#2024/11/6 TASK:

shoe_rack = []

shoe_rack.append(["trainer", "sandals"])
shoe_rack.append(["brown shoes", "sneakers"])
shoe_rack.append(["red pumps", "soccer shoes"])

print(shoe_rack) 

# you create a 2D list the same way you create a normal list.
# The difference is that you can add more lists into the 2D list rather than individual items.

print(len(shoe_rack))

# The output is the number of lists within the 2D list. 

row = shoe_rack[0]
print(len(row))

# the output is the number of items in the list with the index of 0 

shoe_rack.insert(1, ["ballet shoes", "red high heels"])
print(shoe_rack)

# Append() adds items to the end of the list
# Insert() adds items at a specified index

shoe_rack = shoe_rack[0:2]
print(shoe_rack)

# prints the list with the indexes 0 and 1

shoe_rack = shoe_rack[-1]
print(shoe_rack)

# The index -1 prints the last item in the list. -2 would print the second to last and so on

shoe_rack = shoe_rack[:2]
shoe_rack = shoe_rack[0:]
print(shoe_rack)

# The first prints items in the list up to the index of 2
# the second prints items in the list from the index of 0

shoe_rack.pop(0)
print(shoe_rack)

shoe_rack.append(["red high heels"])
shoe_rack.remove(["red high heels"])
print(shoe_rack)

shoe_rack.append(["trainer", "sandals"])
shoe_rack.append(["brown shoes", "sneakers"])
shoe_rack.append(["red pumps", "soccer shoes"])

shoe_rack = shoe_rack[0:1] + shoe_rack[-1]
print(shoe_rack)

shoe_rack.append(["trainer", "sandals"])
shoe_rack.append(["brown shoes", "sneakers"])
shoe_rack.append(["red pumps", "soccer shoes"])

shoe_rack.sort()
print(shoe_rack)

shoe_rack.reverse()
print(shoe_rack)

# Sort() sorts the list by grouping the items that start with the same letter
# Reverse() reverses the order of items in the list
